<% movie = Movie.find_by(id: params["id"]) %>

<h1>Editing Movie: <%= movie.title %></h1>

<form action="/movies/<%= movie.id %>/update" class='col-sm-5'>

  <p class="form-group">Title: <input value="<%= movie.title %>" autofocus class="form-control" name="title"></p>
  <p class="form-group">Year: <input value="<%= movie.year %>" autofocus class="form-control" name="year"></p>
  <p class="form-group">Poster URL:<input value="<%= movie.poster_url %>" autofocus class="form-control" name="poster_url"></p>

  <p class="form-group">Director ID:
      <select class="form-control" name="director_id">
        <% for director in Director.all %>
          <option value="<%= director.id %>"><%= director.name %></option>
        <% end %>

      </select>
  </p>

  <button class="btn btn-primary">Update Movie</button>

</form>
